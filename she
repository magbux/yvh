-- // 1. Load the Library
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/magbux/ZyphUiLib/refs/heads/main/Library.Lua"))()

-- // 2. Create the Main Window
local Window = Library:CreateWindow("Zyph Hub Example")

-- // 3. Create Tabs
local MainTab = Window:Tab("Local Player")
local VisualsTab = Window:Tab("Visuals")
local MiscTab = Window:Tab("Misc")

-- // -----------------------------
-- // [ Tab 1: Local Player ]
-- // -----------------------------

-- Button Example
MainTab:Button("Reset Character", function()
    game.Players.LocalPlayer.Character:BreakJoints()
end)

-- Toggle Example (Infinite Jump)
getgenv().InfJump = false
game:GetService("UserInputService").JumpRequest:Connect(function()
    if getgenv().InfJump then
        game.Players.LocalPlayer.Character:FindFirstChildOfClass('Humanoid'):ChangeState("Jumping")
    end
end)

MainTab:Toggle("Infinite Jump", false, function(state)
    getgenv().InfJump = state
    print("Infinite Jump set to:", state)
end)

-- Slider Example (WalkSpeed)
MainTab:Slider("WalkSpeed", 16, 250, 16, function(value)
    if game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid") then
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = value
    end
end)

-- Slider Example (JumpPower)
MainTab:Slider("JumpPower", 50, 300, 50, function(value)
    if game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid") then
        game.Players.LocalPlayer.Character.Humanoid.UseJumpPower = true
        game.Players.LocalPlayer.Character.Humanoid.JumpPower = value
    end
end)

-- // -----------------------------
-- // [ Tab 2: Visuals ]
-- // -----------------------------

-- Slider for FOV
VisualsTab:Slider("Field of View", 70, 120, 70, function(value)
    workspace.CurrentCamera.FieldOfView = value
end)

-- Color Picker Example
VisualsTab:ColorPicker("Ambient Color", Color3.fromRGB(255, 255, 255), function(color)
    game:GetService("Lighting").Ambient = color
end)

-- Another Toggle
VisualsTab:Toggle("Fullbright", false, function(state)
    if state then
        game:GetService("Lighting").Brightness = 2
        game:GetService("Lighting").ClockTime = 14
        game:GetService("Lighting").FogEnd = 100000
    else
        game:GetService("Lighting").Brightness = 1
        game:GetService("Lighting").ClockTime = 12
        game:GetService("Lighting").FogEnd = 1000
    end
end)

-- // -----------------------------
-- // [ Tab 3: Misc ]
-- // -----------------------------

MiscTab:Button("Rejoin Server", function()
    game:GetService("TeleportService"):Teleport(game.PlaceId, game.Players.LocalPlayer)
end)

MiscTab:Button("Copy Discord Link", function()
    setclipboard("https://discord.gg/yourserver")
    print("Link copied to clipboard!")
end)
